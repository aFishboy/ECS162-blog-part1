{{! Partial for a single post }}

<link rel="stylesheet" href="/css/post-styles.css">  

<div class="post">
    <div class="post-avatar">
        <img src="/avatar/{{username}}" alt="User Avatar">
    </div>
    <div class="post-content preserve-newlines">
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <hr class="post-content-horz-bar">
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->
            <!-- Heart = â™¥  or I found this <i class="fas fa-heart"></i>-->
            <!-- font awesome  trashcan = <i class="fas fa-trash-alt"> </i>-->
            <div class="post-actions">
                <p>
                    {{#ifCond this.username user.username}}
                        <button class="delete-button" data-id="{{id}}" onclick="handleDeleteClick(event)"><i class="fas fa-trash-alt"></i></button>
                    {{else}}
                        {{#if isLikedByUser}}
                            <button class="like-button liked-by-user" data-id="{{id}}" onclick="handleLikeClick(event)"><i class="fas fa-heart"></i></button>    
                        {{else}}
                            <button class="like-button" data-id="{{id}}" onclick="handleLikeClick(event)"><i class="fas fa-heart"></i></button>
                        {{/if}}
                    {{/ifCond}}
                    {{likes}} Likes - {{postNeoType}}ed by {{username}} on {{timestamp}}
                </p>
            </div>
        </div>        
    </div>
</div>
<script src="/scripts/post-partial.js"></script>
